<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t('first_name') %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= t('last_name') %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= t('street') %><br />
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= t('postcode') %><br />
    <%= f.number_field :postcode %>
  </div>
  <div class="field">
    <%= t('place') %><br />
    <%= f.text_field :town %>
  </div>
  <div class="field">
    <%= t('phone') %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= t('email') %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= t('membership_fee') %><br />
    <%= number_to_currency(f.text_field :beitrag) %><%= f.select :payment_period, Member::PAYMENT_PERIODS.map { |p| [t(p), p] } %><%= f.select :payment_method, Member::PAYMENT_METHODS.map { |p| [t(p), p] } %>
  </div>
  
  <div class="field">
    <%= t('enrolement_date') %><br />
	
    <%= f.date_select :eintrittsdatum, :default => { :day => 1, :month => 8 } %>
  </div>
  <div class="field">
    <%= t('leaving_date') %><br />
    <%= f.date_select :austrittsdatum, :include_blank => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
