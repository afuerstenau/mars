<p>
  <b><%= t('first_name')%></b>
  <%= @member.first_name %>
</p>

<p>
  <b><%= t('last_name')%></b>
  <%= @member.last_name %>
</p>

<p>
  <b><%= t('phone')%></b>
  <%= @member.phone %>
</p>

<p>
  <b><%= t('email')%></b>
  <%= @member.email %>
</p>

<p>
  <b><%= t('street')%></b>
  <%= @member.street %>
</p>

<p>
  <b><%= t('postcode')%></b>
  <%= @member.postcode %> <%= @member.town %>
</p>

