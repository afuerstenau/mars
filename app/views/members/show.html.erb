<table>
  <tr>
    <th><%= t('first_name')%></th>
	<th><%= t('last_name')%></th>
    <th><%= t('enrolement_grade')%></th>
	<th><%= t('current_grade')%></th>
	<th></th>
  </tr>

<% @member.children.each do |child| %>
  <tr class="<%= cycle( 'list_line_odd', 'list_line_even')%>">
	<td><%= child.first_name %></td>
    <td><%= child.last_name %></td>
    <td><%= child.klasse_bei_eintritt %></td>
    <td><%= child.current_class %></td>
	<td><%= link_to t('.edit_child'), edit_child_path(child.id) %></td>
  </tr>
<% end %>

<% unless @member.bank_account.nil? %>
<p>
	<b>BLZ: </></b><%=@member.bank_account.blz%><b> Konto Nr: </></b><%=@member.bank_account.account_number%><b> Name der Bank: </></b><%=@member.bank_account.bank_name%> <%= link_to t('.edit_bank_account'), edit_bank_account_path(@member.bank_account.id) %>
</p>
<% end %>
</table>
