<h1>Listing members</h1>

<table>
  <tr>
    <th>Last name</th>
	<th>First name</th>
    <th>Street</th>
	<th>Town</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Beitrag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr class="<%= cycle( 'list_line_odd', 'list_line_even')%>">
    <td><%= member.last_name %></td>
	<td><%= member.first_name %></td>
    <td><%= member.street %></td>
	<td><%= member.postcode %> <%= member.town %></td>
    <td><%= member.phone %></td>
    <td><%= member.email %></td>
    <td><%= number_to_currency(member.beitrag) %></td>
    <td class="list_actions">
	<%= link_to 'Show', member %>
    <%= link_to 'Edit', edit_member_path(member) %>
    <%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %>
	</td>
  </tr>
<% end %>
</table>

<br />

