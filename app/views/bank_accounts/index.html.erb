<h1><%= t('list_bank_accounts') %></h1>

<table>
  <tr>
    <th>Member</th>
    <th><%= t('bank_code') %></th>
    <th><%= t('account_number') %></th>
    <th><%= t('bank_name') %></th>
    <th><%= t('account_holder') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bank_accounts.each do |bank_account| %>
  <tr>
    <td><%= bank_account.member_id %></td>
    <td><%= bank_account.bank_code %></td>
    <td><%= bank_account.account_number %></td>
    <td><%= bank_account.bank_name %></td>
    <td><%= bank_account.account_holder %></td>
    <td><%= link_to t('show'), bank_account %></td>
    <td><%= link_to t('edit'), edit_bank_account_path(bank_account) %></td>
    <td><%= link_to t('destroy'), bank_account, method: :delete, data: { confirm: t('are_you_sure') } %></td>
  </tr>
<% end %>
</table>

